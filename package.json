{
  "name": "monorepo-demo",
  "description": "Monorepo for managing multiple apps and shared packages",
  "private": true,
  "author": "Ru Chern Chong <hello@ruchern.dev>",
  "license": "MIT",
  "scripts": {
    "test": "turbo test",
    "test:app-a": "turbo run monorepo-app-a#test",
    "test:app-b": "turbo run monorepo-app-b#test",
    "test:shared": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "dev": "turbo run dev",
    "dev:app-a": "pnpm -F monorepo-app-a run dev",
    "dev:app-b": "pnpm -F monorepo-app-b run dev",
    "deploy": "pnpm run -r deploy",
    "deploy:app-a": "pnpm -F monorepo-app-a run deploy",
    "deploy:app-b": "pnpm -F monorepo-app-b run deploy",
    "build": "turbo run build",
    "deploy:staging": "turbo run deploy:staging",
    "deploy:prod": "turbo run deploy:prod"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@vitest/coverage-v8": "^4.0.10",
    "turbo": "^2.6.1",
    "vitest": "^4.0.10"
  },
  "packageManager": "pnpm@10.22.0"
}
